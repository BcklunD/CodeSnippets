<div id="error">
  {{#if_equal viewData.status 404}}
    <h1>404 - Not Found</h1>
    <h2>This page could not be found.</h2>
    <img src="../img/sadface.PNG", alt="Sad face image", width="300px">
  {{/if_equal}}
  {{#if_equal viewData.status 403}}
    <h1>403 - Forbidden</h1>
    <h2>You are not authorized on this page.</h2>
    <img src="../img/notallowed.jpg", alt="Not allowed image", width="300px">
  {{/if_equal}}
  {{#if_equal viewData.status 500}}
    <h1>500 - Internal Server Error</h1>
    <h2>Sorry, something went wrong in the server.</h2>
    <img src="../img/broken.jpg", alt="Not allowed image", width="300px">
  {{/if_equal}}
</div>